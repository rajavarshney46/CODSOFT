import random

def get_computer_choice():
    return random.choice(['rock', 'paper', 'scissors'])

def get_user_choice():
    choice = input("Choose Rock, Paper, or Scissors: ").lower()
    while choice not in ['rock', 'paper', 'scissors']:
        print("âŒ Invalid choice. Please try again.")
        choice = input("Choose Rock, Paper, or Scissors: ").lower()
    return choice

def determine_winner(user, computer):
    if user == computer:
        return "tie"
    elif (user == 'rock' and computer == 'scissors') or \
         (user == 'scissors' and computer == 'paper') or \
         (user == 'paper' and computer == 'rock'):
        return "user"
    else:
        return "computer"

def play_game():
    print("ğŸ® Welcome to Rock-Paper-Scissors Game!")
    user_score = 0
    computer_score = 0
    round_num = 1

    while True:
        print(f"\nğŸ“ Round {round_num}")
        user_choice = get_user_choice()
        computer_choice = get_computer_choice()

        print(f"ğŸ§‘ You chose: {user_choice.capitalize()}")
        print(f"ğŸ’» Computer chose: {computer_choice.capitalize()}")

        winner = determine_winner(user_choice, computer_choice)

        if winner == "tie":
            print("ğŸ¤ It's a tie!")
        elif winner == "user":
            print("ğŸ‰ You win this round!")
            user_score += 1
        else:
            print("ğŸ˜” Computer wins this round.")
            computer_score += 1

        print(f"ğŸ”¢ Score => You: {user_score} | Computer: {computer_score}")

        again = input("\nDo you want to play another round? (yes/no): ").lower()
        if again != 'yes':
            print("\nğŸ Final Score:")
            print(f"ğŸ‘¤ You: {user_score} | ğŸ¤– Computer: {computer_score}")
            if user_score > computer_score:
                print("ğŸ† You won the game!")
            elif computer_score > user_score:
                print("ğŸ’» Computer won the game!")
            else:
                print("ğŸ¤ It's a draw overall!")
            print("Thanks for playing! ğŸ®")
            break

        round_num += 1

# Run the game
if __name__ == "__main__":
    play_game()
